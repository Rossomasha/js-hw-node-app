<h1>Add new post</h1>

<div class="blog-list">
    {{#each bloglist}}
        <article>
            <h2>{{title}}</h2>
            <p>{{text}}</p>
        </article>
    {{/each}}
</div>

<form id="new-post" action="/blog/new" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="title" placeholder="Post title">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="url" placeholder="Post URL">
    </div>
    <div class="form-group">
        <textarea class="form-control" placeholder="Write your post" name="text" required></textarea>
    </div>

    <button class="btn btn-primary">Send</button>
</form>